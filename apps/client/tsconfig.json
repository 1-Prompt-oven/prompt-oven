{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/app/*": ["./src/app/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/entity/*": ["./src/entity/*"],
			"@/feature/*": ["./src/feature/*"],
			"@/widget/*": ["./src/widget/*"],
			"@/page/*": ["./src/page/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
