{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/app/*": ["./src/app/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/components/*": ["./src/components/*"],
			"@/assets/*": ["./assets/*"],
			"@/lib/*": ["./src/lib/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
